    "version": "0.2.0",
    "configurations": [
        {
            "type": "julia",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/vscode_test.jl",
            "stopOnEntry": false
        },
        {
            "type": "judy",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": false,
            "debugServer": 4711
        },
        {
            "type": "judy",
            "request": "launch",
            "name": "Judy",
            "program": "${workspaceFolder}/vscode_test.jl",
            "stopOnEntry": false,
            "debugServer": 4711,
        },
        {
            "type": "julia",
            "request": "launch",
            "name": "Run active Julia file",
            "program": "${file}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "juliaEnv": "${command:activeJuliaEnvironment}"
        }
    ]
}